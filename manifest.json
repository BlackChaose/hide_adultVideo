{

  "description": "version 1.8.13 of parents control, block view on sites with adult content",
  "manifest_version": 2,
  "name": "hideAdultVideo",
  "version": "1.8.13",
  "homepage_url": "https://github.com/BlackChaose/hide_adultVideo",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "storage",
	"https://raw.githubusercontent.com/BlackChaose/*"
	],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hideadultvideo.js"]
    }
  ],
  "browser_specific_settings": {
  "gecko": {
    "update_url": "https://raw.githubusercontent.com/BlackChaose/hide_adultVideo/refs/heads/main/updates.json"
  }
}

}
